<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Student</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="employeeId">SELECT A STUDENT TO UPDATE</label><br/>
    <select title="Choose one of the following..." data-header="Select One Student..." class="selectpicker show-tick" data-live-search="true" id="employeeId" name="employeeId">
    <!-- this blank option fixes a problem with not being able to select the first person in the list -->
    <option></option>
    <% if(typeof students != "undefined" && students.length > 0){ %>
      <% students.forEach(function(student){ %>
        <option data-icon="glyphicon glyphicon-user" value="<%= student.student_id %>">
          <%= student.last_name + ", " +  student.first_name %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Student</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateStudentForm" >

  <input type="hidden" name="student_id" id="student_id" value="" disabled="disabled">

  <div class="form-group">
    <label for="first_name" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" required>
    </div>
  </div>

  <div class="form-group">
    <label for="last_name" class="col-sm-2 control-label">Last Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="last_name" name="last_name"  placeholder="Last Name" required>
    </div>
  </div>

  <div class="form-group">
    <label for="start_date" class="col-sm-2 control-label">Start Date</label>
    <div class="col-sm-10">
      <input type="dateISO" class="form-control" id="start_date" name="start_date" placeholder="2017-01-01" required>
    </div>
  </div>

  <div class="form-group">
    <label for="gpa" class="col-sm-2 control-label">GPA</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="gpa" name="gpa" placeholder="4.0" required>
    </div>
  </div>

  <div class="form-group">
    <label for="sat" class="col-sm-2 control-label">SAT Score</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="sat" name="sat" placeholder="1400" required>
    </div>
  </div>

  <div class="form-group">
    <label for="major_id" class="col-sm-2 control-label">Major ID</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="major_id" name="major_id" placeholder="Major ID" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Student</button>
    </div>
  </div>
</form>
